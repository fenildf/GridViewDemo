<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_bookshelf_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_bookshelf_item"
            android:layout_below="@+id/img_bookshelf_item"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:text="乾坤大挪移"
            android:textColor="#333333"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/img_bookshelf_item"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingRight="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img_bookitem_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/icon_data_select"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>